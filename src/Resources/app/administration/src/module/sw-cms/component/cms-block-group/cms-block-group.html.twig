{% block cms_block_group %}
    <div class="sw-cms-block-group">
        {% block cms_block_group_actions %}
            <div class="sw-cms-block-group__actions"
                :class="[menuPosition]"
            >
                <div class="sw-cms-block-group__settings-action"
                    @click="onGroupBlockSelection"
                >
                    <sw-icon
                        name="default-action-settings"
                        size="16"
                    />
                </div>
            </div>
        {% endblock %}

        {% block cms_block_group_content %}{% endblock %}
    </div>
{% endblock %}
